<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/locationName"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/locationImage"
        android:layout_width="381dp"
        android:layout_height="199dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/failed1" />

    <TextView
        android:id="@+id/locationName"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="NAME OF LOCATION"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationImage" />

    <EditText
        android:id="@+id/locationAddress"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationName" />

    <TextView
        android:id="@+id/websiteLabel"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Website: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationAddress" />

    <TextView
        android:id="@+id/locationWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Website"
        app:layout_constraintBaseline_toBaselineOf="@+id/websiteLabel"
        app:layout_constraintStart_toEndOf="@+id/websiteLabel" />

    <TextView
        android:id="@+id/phoneLabel"
        android:layout_width="47dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Phone: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/websiteLabel" />

    <TextView
        android:id="@+id/locationPhone"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:text="LOCATION PHONE "
        app:layout_constraintBaseline_toBaselineOf="@+id/phoneLabel"
        app:layout_constraintStart_toEndOf="@+id/phoneLabel" />

    <TextView
        android:id="@+id/locationRating"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginEnd="16dp"
        android:text="RATING"
        app:layout_constraintBaseline_toBaselineOf="@+id/ratingLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ratingLabel"
        android:layout_width="95dp"
        android:layout_height="19dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="Google Review:"
        app:layout_constraintEnd_toStartOf="@+id/locationRating"
        app:layout_constraintTop_toBottomOf="@+id/websiteLabel" />

    <TextView
        android:id="@+id/openLabel"
        android:layout_width="99dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Currently Open:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneLabel" />

    <TextView
        android:id="@+id/locationOpen"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:text="Yes"
        app:layout_constraintBaseline_toBaselineOf="@+id/openLabel"
        app:layout_constraintStart_toEndOf="@+id/openLabel" />

    <TextView
        android:id="@+id/locationPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="5.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/priceLabel"
        app:layout_constraintStart_toEndOf="@+id/priceLabel" />

    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="16dp"
        android:text="Price: "
        app:layout_constraintStart_toStartOf="@+id/ratingLabel"
        app:layout_constraintTop_toBottomOf="@+id/locationRating" />

    <TextView
        android:id="@+id/krowdedLabel"
        android:layout_width="95dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Krowded Level:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openLabel" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="5.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/krowdedLabel"
        app:layout_constraintStart_toEndOf="@+id/krowdedLabel" />

    <TextView
        android:id="@+id/coverLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cover Charge: "
        app:layout_constraintStart_toStartOf="@+id/priceLabel"
        app:layout_constraintTop_toBottomOf="@+id/priceLabel" />

    <TextView
        android:id="@+id/locationCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="$10.00"
        app:layout_constraintBaseline_toBaselineOf="@+id/coverLabel"
        app:layout_constraintStart_toEndOf="@+id/coverLabel" />

</android.support.constraint.ConstraintLayout>